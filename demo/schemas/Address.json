{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://address.evangelizer.site",
    "type": "object",
    "description": "The believer's address",
    "properties": {
        "addressLine": {
            "type": "string",
            "description": "Address line"
        },
        "city": {
            "type": "string",
            "description": "City name"
        },
        "state": {
            "type": "string",
            "description": "State name"
        },
        "zip": {
            "type": "integer",
            "description": "Zip code"
        }
    },
    "required": [
        "addressLine",
        "city",
        "state",
        "zip"
    ]
}